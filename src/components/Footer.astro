---
import { Image } from "astro:assets";
import Button from "./Button.astro";
---

<section>
  <!--  Card Footer-->
  <div
    class="relative flex justify-around items-center m-[50px] top-36 p-2.5 h-52 rounded-2xl bg-gradient-to-r from-[#125376] to-[#17637f] overflow-hidden"
  >
    <h3 class="text-white font-bold text-[clamp(20px,5vw,32px)] leading-[50px]">
      Manage Your Finances With Cashback
    </h3>
    <div
      class="absolute top-[-80px] left-[-60px] w-52 h-52 rounded-full bg-[rgba(240,248,255,0.137)]"
    >
    </div>
    <div
      class="absolute bottom-[-120px] right-[-100px] w-52 h-52 rounded-full bg-[rgba(240,248,255,0.137)]"
    >
    </div>
    <button
      class="w-36 h-10 border-none text-[clamp(4px,3vw,16px)] bg-white rounded-lg font-semibold text-[#1b7b77]"
      >Read More</button
    >
  </div>

  <!-- Footer -->
  <div
    class="w-full h-auto xl:h-[500px] md:h-[600px] sm:h-[1100px] flex flex-col justify-center items-center p-5 bg-gradient-to-r from-[#2aa6da] to-[#1b7b77]"
  >
    <div
      class="w-[88%] flex flex-wrap gap-10 justify-center mt-12 xl: pt-[100px] md: pt-[100px] sm: pt-[100px]"
    >
      <div class="flex-grow text-white p-7.5 w-full md:w-auto">
        <h2 class="py-5 text-2xl font-bold md: pt-[40px]">CashBank</h2>
        <small>
          Cashbank is a service or electronic wallet that interacts with various
          platforms around the world
        </small>
      </div>
      <div class="flex-grow text-white p-7.5 w-full md:w-auto">
        <h2 class="py-5 text-xl text-left">Services</h2>
        <ul class="list-none m-0 p-0">
          <li class="py-2.5 text-lg font-light">How It's Works</li>
          <li class="py-2.5 text-lg font-light">Features</li>
          <li class="py-2.5 text-lg font-light">Integrations</li>
          <li class="py-2.5 text-lg font-light">Pricing</li>
        </ul>
      </div>
      <div class="flex-grow text-white p-7.5 w-full md:w-auto">
        <h2 class="py-5 text-xl text-left">Company</h2>
        <ul class="list-none m-0 p-0">
          <li class="py-2.5 text-lg font-light">About</li>
          <li class="py-2.5 text-lg font-light">Terms</li>
          <li class="py-2.5 text-lg font-light">Privacy Policy</li>
          <li class="py-2.5 text-lg font-light">Careers</li>
        </ul>
      </div>
      <div class="flex-grow text-white p-7.5 w-full md:w-auto">
        <h2 class="py-5 text-xl text-left">Social Media</h2>
        <div class="flex gap-2.5">
          <Image
            src="/images/facebook.svg"
            alt="facebook icon"
            class="h-9 w-10 py-1 object-contain cursor-pointer"
            width={164}
            height={154}
          />
          <Image
            src="/images/twitter.svg"
            alt="twitter icon"
            class="h-9 w-10 py-1 object-contain cursor-pointer"
            width={164}
            height={154}
          />
          <Image
            src="/images/whatsapp.svg"
            alt="whatsapp icon"
            class="h-9 w-10 py-1 object-contain cursor-pointer"
            width={164}
            height={154}
          />
          <Image
            src="/images/youtube.svg"
            alt="youtube icon"
            class="h-9 w-10 py-1 object-contain cursor-pointer"
            width={164}
            height={154}
          />
          <Image
            src="/images/instagram.svg"
            alt="instagram icon"
            class="h-9 w-10 py-1 object-contain cursor-pointer"
            width={164}
            height={154}
          />
        </div>
      </div>
    </div>
  </div>
</section>
