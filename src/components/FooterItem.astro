---
const { listOptions } = Astro.props;

interface Props {
  listOptions: Array<{ name: string; href: string }>;
}
---

<ul class="flex flex-col gap-3">
  {
    listOptions.map(({ name, href }) => (
      <li class="text-sm md:text-base  xl:text-lg font-normal transition-colors hover:text-primary">
        <a href={href}>{name} </a>
      </li>
    ))
  }
</ul>
