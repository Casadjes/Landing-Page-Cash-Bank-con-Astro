---
interface Props {
  imageSrc: string;
  imageSize: string;
  title: string;
  description: string;
}

const { imageSrc, imageSize, title, description } = Astro.props;
---

<!-- card -->
<div
  class="flex flex-col gap-4 items-center text-center py-3 px-9 w-[380px] h-[260px]"
>
  <!--Image container-->
  <div class="w-24 h-24 flex justify-center items-center">
    <img src={imageSrc} alt={title} class={imageSize} />
  </div>

  <h3 class="text-textPrimary font-bold text-xl text-balance">
    {title}
  </h3>
  <p class="text-textSecondary text-[13px] font-normal">
    {description}
  </p>
</div>