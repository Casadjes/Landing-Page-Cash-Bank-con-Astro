---
import Image from "astro/components/Image.astro";

interface Props {
  imageSrc: string;
  className: string;
  title: string;
  description: string;
}

const { imageSrc, className, title, description } = Astro.props;
---

<!-- card -->
<div
  class="flex flex-col gap-4 items-center text-center py-3 px-9 w-[380px] h-[260px]"
>
  <!--Image container-->
  <div class="w-24 h-24 flex justify-center items-center">
    <Image
      src={imageSrc}
      alt={title}
      class={className}
      width={164}
      height={154}
    />
  </div>

  <h3 class="text-textPrimary font-bold text-xl text-balance leading-relaxed">
    {title}
  </h3>
  <p class="text-textSecondary text-sm font-medium leading-loose">
    {description}
  </p>
</div>
