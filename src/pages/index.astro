---
import Bubble from "../components/Bubble.astro";
import Experience from "../components/Experience.astro";
import Features from "../components/Features.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import InterfaceView from "../components/InterfaceView.astro";
import Maps from "../components/Maps.astro";
import Navbar from "../components/Navbar.astro";
import Sponsors from "../components/Sponsors.astro";
import Testimonials from "../components/Testimonials.astro";
import Transaction from "../components/Transaction.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Cash Bank -  Banco de inversiones online">
  <header class="relative max-w-screen-2xl mx-auto px-5 mt-5">
    <Navbar />
    <Bubble class="-left-20 -top-24" />
    <Header />
    <Sponsors />
  </header>
  <main class="max-w-screen-2xl mx-auto px-5">
    <Features />
    <Experience />
    <Transaction />
    <InterfaceView />
    <Maps />
  </main>

  <section>
    <!-- Testimonials Mobile -->
    <div class="block md:hidden">
      <Testimonials sliderPerViews={1} spaceBetween={10} />
    </div>

    <!-- Testimonials Tablet -->
    <div class="hidden md:block xl:hidden">
      <Testimonials sliderPerViews={2} spaceBetween={20} />
    </div>

    <!-- Testimonials Desktop -->
    <div class="hidden xl:block">
      <Testimonials sliderPerViews={3} spaceBetween={30} />
    </div>
  </section>

  <Footer />
</Layout>
